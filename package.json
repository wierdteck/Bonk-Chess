{
  "name": "bonk-chess",
  "version": "1.0.0",
  "description": "Bonk Chess - A multiplayer chess game",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@bonk-chess/server & npm run dev --workspace=@bonk-chess/client",
    "dev:server": "npm run dev --workspace=@bonk-chess/server",
    "dev:client": "npm run dev --workspace=@bonk-chess/client",
    "build": "npm run build --workspace=@bonk-chess/client",
    "install:all": "npm install && npm install --workspaces"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wierdteck/Bonk-Chess.git"
  },
  "keywords": [
    "chess",
    "multiplayer",
    "game"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wierdteck/Bonk-Chess/issues"
  },
  "homepage": "https://github.com/wierdteck/Bonk-Chess#readme",
  "dependencies": {
    "chess.js": "^1.4.0",
    "chessboardjsx": "^2.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^13.0.0"
  }
}
